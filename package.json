{
  "name": "pong-electron",
  "version": "1.0.0",
  "description": "Pong game packaged with Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-packager . Pong --platform=win32 --arch=x64 --out=dist --overwrite",
    "dist:mac": "electron-packager . Pong --platform=darwin --arch=x64 --out=dist --overwrite",
    "dist:linux": "electron-packager . Pong --platform=linux --arch=x64 --out=dist --overwrite"
  },
  "devDependencies": {
    "electron": "^37.2.3",
    "electron-packager": "^17.1.2"
  }
}
